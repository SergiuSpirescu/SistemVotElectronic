<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.MainWindowController"
            prefHeight="1000.0" prefWidth="1000.0">

    <top>
        <Button fx:id="exitButton" BorderPane.alignment="CENTER_RIGHT" alignment="CENTER_RIGHT" onAction="#onExitButton" style="-fx-border-color: BLUE" text="">
            <graphic>
                <ImageView>
                    <Image url="@/toolbarButtonGraphics/media/Stop24.gif"/>
                </ImageView>
            </graphic>
        </Button>
    </top>

    <center>
        <VBox BorderPane.alignment="CENTER"
              alignment="CENTER" prefHeight="200.0" prefWidth="200.0"
              style="-fx-border-color: BLUE; -fx-border-style: dashed; -fx-border-width: 3">
            <Label fx:id="labelSectieVot" textAlignment="CENTER">
            </Label>

            <Label text="Apasati pe butonul de mai jos pentru a incepe!" textAlignment="CENTER">
            </Label>

            <Button fx:id="startButton" onAction="#switchToVoteSessionView" text="Incepe Sesiunea de Vot"
                    textAlignment="RIGHT">
            </Button>

            <Label fx:id="votInceput" textAlignment="CENTER">
            </Label>
        </VBox>
    </center>

</BorderPane>
